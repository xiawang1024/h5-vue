html-font-size = 64px
$bg-color = #121532
@import "../../../node_modules/stylus-px2rem"
//全屏
fullpage()
  width 100%
  height 100%
  background-color $bg-color
// 背景图片
bgimage(src, width)
  background url(src) center center no-repeat
  background-size width auto
// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px